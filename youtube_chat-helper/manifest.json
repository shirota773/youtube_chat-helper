{
  "manifest_version": 3,
  "name": "YouTube Chat Helper",
  "version": "2.0",
  "description": "Save and manage YouTube chat stamp templates with global and channel-specific support",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
